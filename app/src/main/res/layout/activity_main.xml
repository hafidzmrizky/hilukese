<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/triangle" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="MENCARI LUAS DAN KELILING SEGITIGA"
        android:textAlignment="center"
        android:textColor="#5A92AF"
        android:textSize="20dp" />

    <Button
        android:id="@+id/Bluas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="LUAS"
        app:cornerRadius="30dp"
        app:iconPadding="8dp"
        app:strokeColor="#D2E4F1"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/Bkeliling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:text="KELILING"
        app:cornerRadius="30dp"
        app:strokeColor="#D2E4F1"
        app:strokeWidth="1dp" />

    <EditText
        android:id="@+id/tinggi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Masukkan Tinggi"
        android:layout_marginStart="130dp"
        />

    <EditText
        android:id="@+id/sisiA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Masukkan Sisi A"
        android:layout_marginStart="130dp"
        />

    <EditText
        android:id="@+id/sisiB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Masukkan Sisi B"
        android:layout_marginStart="130dp"
        />

    <EditText
        android:id="@+id/sisiC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Masukkan Sisi C"
        android:layout_marginStart="130dp"
        />

    <Button
        android:id="@+id/Bhitung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/blue_100"
        android:text="HITUNG"
        app:cornerRadius="30dp"
        app:strokeColor="#D2E4F1"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/Hasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hasil"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

</LinearLayout>